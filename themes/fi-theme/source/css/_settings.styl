// font faces
$body-font = "canada-type-gibson", "Source Sans Pro", "Helvetica Neue", Arial, sans-serif
$logo-font = $body-font
$code-font = "Roboto Mono", Monaco, courier, monospace

// font sizes
$body-font-size = 15px
$code-font-size = .8em

// 
$width = 1100px
$space = 50px

// colors
$dark   = #2c3e50
$medium = #34495e
$light  = #7f8c8d
$green  = #42b983
$border = #dddddd
$codebg = #f8f8f8
$red = #ff0076
$link1 = #ff0076
$info = #0496ff
$link2 = #0496ff

$radius = 2px
$content-padding-top = 30px
$header-inner-height = 41px
$heading-padding-vertical = 10px
$header-height = $header-inner-height + $heading-padding-vertical * 2
$mobile-header-height = 40px
$heading-link-padding-top = $header-height + $content-padding-top
$mobile-heading-link-padding-top = $mobile-header-height + $content-padding-top
$h2-margin-top = 45px
$h3-margin-top = 52px
