  }
  
}

.the-results{
  padding: 2em 1em 1em;
  .no-result{
    text-align: center;
    font-size: 1.2em;
    font-weight: 600
    opacity: .5
  }
  a{
    font-size: 1em;
    padding: 1em;
    display: block;
    border-bottom: 1px solid #eee
    transition: padding .3s
    &:hover{
      padding-left: 1.3em
    }
    em{
      color: #ff0076
      font-style: normal
      font-weight: 600
    }
    &:hover{
      opacity: .8
    }
    .title{
      font-size: 1.6em
    }
    .exc{
      opacity: .6
     
    }
  }
}
